{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "${workspaceFolder}\\scripts\\custom_configure.bat",
            "group": "build",
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": "$msCompile",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "KRATOS_BUILD_TYPE" : "${input:BuildType}",
                    "KRATOS_SOURCE"     : "${workspaceFolder}",
                    "KRATOS_BUILD"      : "${workspaceFolder}/build",
                    "KRATOS_APP_DIR"    : "${workspaceFolder}/applications",
                    "BOOST_ROOT"        : "C:\\Work\\boost_1_77_0"
                }
            },
        }
    ],
    "inputs": [
        {
            "id": "BuildType",
            "type": "pickString",
            "description": "What compiler options do you want to build with?",
            "options": [
                "Release",
                "RelWithDebInfo",
                "Debug",
                "FullDebug"
            ]
        }
    ]
}